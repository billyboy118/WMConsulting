
<body id="body" >


  <section class="resources-page-header hero-area-tint">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2>Resources</h2>
        </div>
      </div>
    </div>
  </section>

 
			

  <section class="contact-us" id="contact">





    <div class="container">
  		<div class="row">

       <%= render "layouts/alerts" %>

        <div class="contact-details col-md-6" >
 
          <h3>Useful Websites</h3>
          <p>A number of useful websites</p>
        </div>
      </div>

      <% if current_user && current_user.admin == true %>
      <%= button_to 'Create New Entry', new_web_site_path, method: :get %>
      <% end %>
      <br>

      <table class="table align-middle table-striped">
        <thead>
          <tr>
            <th>Topic</th>
            <th>Language</th>
            <th>Description</th>
            <th>Web Address</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @sites.each do |site| %>
            <tr>
              <td><%= site.topic %></td>
              <td><%= site.language %></td>
              <td style="white-space:pre"><%= site.description %></td>
              <td><%= site.address %></td>
               <% if current_user && current_user.admin == true %>
                <td><%= link_to 'Edit', edit_web_site_path(site) %></td>
                <td><%= link_to 'Delete', web_site_path(site), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
  </tbody>

  </table>
    </div>

   <br>
   <br>
   <br>
   <br>
   <br>
   <br>



  </section>





</body>