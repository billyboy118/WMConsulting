
<%= render "layouts/banner", imgClass: "single-page-header", title: "Contact  Us" %>

 <!--Start Contact Us
	=========================================== -->		
<section class="contact-us" id="contact">
	<div class="container">
		<div class="row">

				 <%= render "layouts/alerts" %>
   	
			
			<!-- Contact Details -->
			<div class="contact-details col-md-6 " >
				<h3>Get in Touch</h3>
				<p>Please feel to get in touch using the email below or the contact form provided. </p>
				<ul class="contact-short-info" >
					<li>
						<%= octicon "mail", :height => 50 %>
						<span class="pl-1"> &nbsp  Email: enquiries@wm-consulting.co.uk</span>
					</li>
				</ul>
      </div>

      <div class="contact-form col-md-6 " >
				<%= form_for :contact do |f| %>
				<div>
					<%= f.text_field  :name, required: true, class: "form-control", placeholder: "Your Name" %><br>
					<%= f.text_field :email, required: true, class: "form-control", placeholder: "Your E-mail Address" %><br>
					<%= f.text_field :subject, required: true, class: "form-control", placeholder: "Subject" %><br>
					<%= f.text_area :message,
													rows: 8,
													cols: 40,
													required: true,
													class: "form-control",
													placeholder: "Your Message"%><br>
				<div id="cf-submit">
					<%= f.submit 'Send Message', class: "btn btn-primary  btn-block" %>
				</div>

  			</div>
				<% end %>
			</div>
    </div>
  </div>
</section>  
