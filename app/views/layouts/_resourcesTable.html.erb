  <section class="contact-us" id="contact">
    <div class="container">
  		<div class="row">
        <div class="contact-details col-md-6" >
          <h3><%= title %></h3>
          <p><%= phrase %></p>
        </div>
      </div>

      <% if current_user && current_user.admin == true %>
        <%= button_to 'Create New Entry', new_web_site_path, method: :get %>
      <% end %>
      <br>
      <div class="table-responsive">
        <table class="table align-middle table-striped">
          <thead>
            <tr>
              <th>Topic</th>
              <th>Language</th>
              <th>Description</th>
              <% if type == "code" %>
                <th>Code</th>
              <% end %>
              <th>Web Address</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @sites.each do |site| 
            
            next if site.option != type %>
              <tr>
                <td><%= site.topic %></td>
                <td><%= site.language %></td>
                <td style="white-space:pre break-text"><%= site.description %></td>
                <% if type == "code"%>
                  <td style="white-space:pre break-text"><%= site.example %></td>
                <% end %>

                <td style="break-text"><%= site.address %></td>
                <% if current_user && current_user.admin == true %>
                  <td><%= link_to 'Edit', edit_web_site_path(site) %></td>
                  <td><%= link_to 'Delete', web_site_path(site), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

   <br>
   <br>
   <br>
   <br>
   <br>
   <br>



  </section>
