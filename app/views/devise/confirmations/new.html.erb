<%= render "layouts/banner", imgClass: "resources-page-header", title: "Re-send Confirmation Instructions" %>
<%= render "layouts/alerts" %>



<div class="container">
  <div class="contact-form col-md-6 pt-5" >
      <p>Please provide your email address and we will re-send your confirmation email </p>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Resend", class: "btn btn-primary  btn-block" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>

  </div>
</div>